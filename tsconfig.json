{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "lib": [
			"es6",
            "DOM",
		],
        "rootDir": ".",
        "sourceMap": true,
        "listFiles": true,
        "newLine": "LF",
        "noEmitOnError": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./**/*.d.ts",
        "!./gulpfile.ts",
        "./typings/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "exclude": []
}